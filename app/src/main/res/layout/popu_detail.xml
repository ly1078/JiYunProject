<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#33000000"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_addcar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"

                    android:id="@+id/tv_car_price"/>
                <TextView
                    android:id="@+id/tv_show_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="已选择：请选择规格数量"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_closs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="X"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:text="数量"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_reduce_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_addcar_shape"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:text="-"/>
            <TextView
                android:id="@+id/tv_show_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_addcar_shape"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textSize="20dp"
                android:text="1"/>
            <TextView
                android:id="@+id/tv_add_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_addcar_shape"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:text="+"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
